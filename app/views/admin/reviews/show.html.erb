<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">商品詳細</h5>
      <div class="p-4">
        <table class="table table-bordered mt-2">
          <tr>
            <th>レビュー日時</th>
            <td><%= @review.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>レビュー者</th>
            <td><%= @review.customer.name %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= @review.item.name %></td>
          </tr>
          <tr>
            <th>レビュー評価</th>
            <td><%= @review.customer.name %></td>
          </tr>
          <tr>
            <th>良い点</th>
            <td><%= @review.good_point %></td>
          </tr>
          <tr>
            <th>悪い点</th>
            <td><%= @review.bad_point %></td>
          </tr>
          <tr>
            <th>改善点</th>
            <td><%= @review.improvement_point %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>