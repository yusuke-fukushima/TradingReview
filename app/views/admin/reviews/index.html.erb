<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">レビュー履歴一覧</h5>
      <div class="p-4 bg-light">
        <table class="table table-bordered mt-2">
          <thead>
            <tr>
              <th>レビュー日時</th>
              <th>レビュー者</th>
              <th>商品名</th>
              <th>商品評価</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
                <tr>
                  <td><%= review.created_at.strftime("%Y/%m/%d")  %></td>
                  <td>
                    <%= review.customer.name %>
                  </td>
                  <td>
                    <%= link_to admin_review_path(review), :style=>"color:black;" do %>
                      <%= review.item.name %>
                    <% end %>
                  </td>
                  <td>
                    <div class="item-value raty-center">
                      <div class="star-rating mb-2">
                        <div class="star-rating-front" style="width: <%= review.review_value_percentage %>%">★★★★★</div>
                        <div class="star-rating-back">★★★★★</div>
                      </div>
                      <div class="item-value-display ml-3 pt-2">
                        <%= review.value %>点
                      </div>
                    </div>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "csvで出力する",new_admin_review_path(format: :csv), class:"btn btn-block btn-primary" %>
      </div>
    </div>
  </div>
</div>