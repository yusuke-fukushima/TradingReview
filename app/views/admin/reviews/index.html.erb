<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">レビュー履歴一覧</h5>
      <div class="p-4">
        <table class="table table-bordered mt-2">
          <thead>
            <tr>
              <th>日時</th>
              <th>レビュー者</th>
              <th>商品名</th>
              <th>レビュー評価</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
                <tr>
                  <td><%= review.created_at.strftime("%Y/%m/%d")  %></td>
                  <td><%= review.customer.name %></td>
                  <td>
                    <%= link_to admin_review_path(review) do %>
                      <%= review.item.name %>
                    <% end %>
                  </td>
                  <td></td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>