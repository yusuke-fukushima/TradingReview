<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">商品一覧</h5>
      <div class="p-4">
        <table class="table table-bordered mt-2">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>商品名</th>
              <th>平均レビュー評価</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.genre.name %></td>
                <td>
                  <%= link_to admin_item_path(item) do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td>
                  <div class="content average-value">
                    <div class="star-rating mb-2">
                      <div class="star-rating-front" style="width: <%= item.review_value_percentage %>%">★★★★★</div>
                      <div class="star-rating-back">★★★★★</div>
                    </div>
                    <div class="average-value-display ml-3 pt-2">
                      <%= item.avg_value %>点（<%= item.reviews.count %>件のレビュー）
                    </div>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "新規登録", new_admin_item_path, class:"btn btn-block btn-success mt-5" %>
      </div>
    </div>
  </div>
</div>