<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">商品詳細</h5>
      <div class="p-4">
        <table class="table table-bordered mt-2">
          <%= attachment_image_tag(@item, :image, size: "200x200", fallback: "no_image.jpg") %>
          <tr>
            <th>ジャンル名</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>平均レビュー評価</th>
            <td></td>
          </tr>
        </table>
        <%= link_to "編集", edit_admin_item_path(@item), class:"btn btn-block btn-primary" %>
        <%= link_to "商品一覧", admin_items_path, class:"btn btn-block btn-success" %>
      </div>
    </div>
  </div>
</div>