<h1>商品編集</h1>
<%= form_with model:@item, url: admin_item_path(@item.id),local:true do |f| %>
  <table>
    <tr>
      <th><%= f.label :"商品画像" %></th>
      <td><%= f.attachment_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :"ジャンル" %></th>
      <td><%= f.collection_select(:genre_id, Genre.all, :id, :name , prompt: "-- 選択してください --") %></td>
    </tr>
    <tr>
      <th><%= f.label :"商品名" %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :"商品説明" %></th>
      <td><%= f.text_area :detail %></td>
    </tr>
  </table>
  <%= f.submit "変更内容保存", class: "btn btn-success" %>
<% end %>
