<div class="container">
  <div class="row no-gutters">
    <div class="col-md-8 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0"><strong>ジャンル一覧</strong></h4>
      <div class="p-4 bg-light">
        <table class="table table-bordered mt-2">
          <thead>
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-primary pt-0 pb-0" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "新規登録", new_admin_genre_path, class:"btn btn-block btn-success mt-5 mb-5" %>
        <%= paginate @genres %>
      </div>
    </div>
  </div>
</div>