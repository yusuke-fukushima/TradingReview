<h2>ジャンル一覧・編集</h2>
<%= form_with model: @genre, url: admin_genres_path,local:true do |f| %>
  <div>
    <%= f.label :"ジャンル画像" %>
    <%= f.attachment_field :image %>
  </div>
  <div>
    <%= f.label :"ジャンル名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>
<table>
  <thead>
    <tr>
      <th>ジャンル画像</th>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= attachment_image_tag(genre, :image, size: "40x40", fallback: "no_image.jpg") %></td>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
        <td><%= link_to "削除する", edit_admin_genre_path(genre),method: :delete,class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>