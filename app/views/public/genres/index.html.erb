<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 mx-auto text-center shadow-lg px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0"><strong>ジャンル一覧</strong></h4>
      <div class="p-10 bg-light d-flex flex-wrap justify-content-center">
        <% @genres.each do |genre| %>
          <%= link_to public_genre_items_path(genre.id), class: "mx-5", :style=>"color:black;" do %>
            <p><%= attachment_image_tag(genre, :image, size: "200x200", fallback: "no_image.jpg") %></p>
            <p><%= genre.name %></p>
          <% end %>
        <% end %>
        <%= paginate @genres %>
      </div>
    </div>
  </div>
</div>
