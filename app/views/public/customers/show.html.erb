<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 mx-auto text-center shadow-lg px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0"><strong>マイページ</strong></h4>
      <div class="p-4 bg-light table-responsive">
        <table class="table text-nowrap table-bordered mt-2">
          <tbody>
            <tr>
              <td class="table-active"><strong>氏名</strong></td>
              <td><%= @customer.name %></td>
            </tr>
            <tr>
              <td class="table-active"><strong>メールアドレス</strong></td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td class="table-active"><strong>郵便番号</strong></td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td class="table-active"><strong>住所</strong></td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td class="table-active"><strong>保有ポイント</strong></td>
              <td><%= @customer.total_point %>ポイント</td>
            </tr>
          </tbody>
        </table>
        <% if @customer.name != 'ゲスト' %>
          <%= link_to "編集する", edit_public_customer_path(@customer.id), class:"btn btn-block btn-primary mt-5" %>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>
</div>