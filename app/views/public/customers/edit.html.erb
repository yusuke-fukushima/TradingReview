<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">会員情報編集</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <p>下記項目を入力してください。</p>
        </div>
        <%= form_with model: @customer, url: public_customer_path, local: true do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-tenge"></i></span>
            </div>
            <%= f.text_field :postal_code, autofocus: true, class:"form-control", id:"inputPostalcode", placeholder: '郵便番号' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fab fa-font-awesome-flag"></i></span>
            </div>
            <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputAddress", placeholder: '住所' %>
          </div>
          <%= f.submit "編集内容を保存", class:"btn btn-block btn-primary mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>