<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-sm-12 col-md-8 col-lg-5 col-xl-5 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h4 class="text-dark bg-light py-4 mb-0"><strong>新規登録</strong></h4>
      <div class="form-body p-4 bg-light">
        <div class="mx-auto text-center">
          <p>下記項目を入力してください。</p>
        </div>
        <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
          <%= render "layouts/error_messages", resource: resource %>
          <div class="mb-3">
            <%= f.label :男性  %>
            <%= f.radio_button :gender, :man %>
            <%= f.label :女性  %>
            <%= f.radio_button :gender, :woman %>
            <%= f.label :その他  %>
            <%= f.radio_button :gender, :other %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.select :age, options_for_select((0..120).to_a),  :prompt => "選択してください" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"名前"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-tenge"></i></span>
            </div>
            <%= f.text_field :postal_code, autofocus: true, class:"form-control", id:"inputPostalcode", placeholder: '郵便番号(ハイフンなし)' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fab fa-font-awesome-flag"></i></span>
            </div>
            <%= f.text_field :address, autofocus: true, class:"form-control", id:"inputAddress", placeholder: '住所' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-check-circle"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認" %>
          </div>
          <%= f.submit "新規登録", class:"btn btn-block btn-success mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>